<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Background="Beige"
        Title="Moje aplikace" Height="300" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="70" Background="Bisque">
            <Button x:Name="btnTest" Margin="5" Content="Top20" HorizontalAlignment="Left" Height="39" Width="105" FontSize="18" Background="#FFAFF0F0" Click="btnTest_Click"/>
            <Button x:Name="btnPersonDetail" Margin="5" Click="btnPersonDetail_Click" Content="Person by ID" HorizontalAlignment="Left"  Height="39" Width="111" FontSize="16" Background="#FFF7F09A"/>
            <TextBox x:Name="txtPersonID" Margin="5" VerticalContentAlignment="Center" HorizontalAlignment="Center"  TextWrapping="Wrap" Text="0" Width="40" Height="39" FontSize="16"/>
            <Button x:Name="btnFiles" Margin="5" Content="Load Files.." HorizontalAlignment="Left"  Height="39" Width="105" FontSize="18" Background="#FFAFBBF0" Click="btnFiles_Click"/>
        </StackPanel> 
        <ScrollViewer Margin="0,100,0,0">
            <TextBlock x:Name="txbInfo" TextWrapping="Wrap" Text="...." FontSize="20" />
        </ScrollViewer>
        
        
    </Grid>
</Window>
