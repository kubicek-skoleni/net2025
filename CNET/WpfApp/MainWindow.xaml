<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Background="Beige"
        Title="Moje aplikace" Height="300" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="70" Background="Bisque">
            <Button x:Name="btnTest" Margin="5" Content="Top20"  Height="39" Width="105" FontSize="18" Background="#FFAFF0F0" Click="btnTest_Click"/>
            <Button x:Name="btnPersonDetail" Margin="5" Click="btnPersonDetail_Click" Content="Person by ID" Height="39" Width="111" FontSize="16" Background="#FFF7F09A"/>
            <TextBox x:Name="txtPersonID" Margin="5" VerticalContentAlignment="Center" TextWrapping="Wrap" Text="0" Width="40" Height="39" FontSize="16"/>
            <Button x:Name="btnFiles" Margin="5" Content="Load Files.." Height="39" Width="105" FontSize="18" Background="#FFAFBBF0" Click="btnFiles_Click"/>
            <Button x:Name="btnProcessFilesAll" Content="Global stats" Margin="5" FontSize="18" Height="39" Padding="5" Background="CornflowerBlue" Click="btnProcessFilesAll_Click" />
            <Button x:Name="btnProcessPerFile" Content="Per file" Margin="5" FontSize="18" Height="39" Padding="5" Background="CornflowerBlue" Click="btnProcessPerFile_Click" />
            <Button x:Name="btnRandomColor" Content="Random Color" Click="btnRandomColor_Click"  Margin="5" FontSize="18" Height="39" Padding="5"  />
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0,70,0,0" Height="70" Background="#FFF3F7A7">
            <Button x:Name="btnAsyn1AllFiles" Content="All async" Margin="5" FontSize="18" Height="39" Padding="5" Background="CornflowerBlue" Click="btnAsyn1AllFiles_Click" />
            <Button x:Name="btnPerFileAsync" Content="Per file async" Click="btnPerFileAsync_Click" Margin="5" FontSize="18" Height="39" Padding="5" Background="CornflowerBlue"  />

        </StackPanel>
        <ScrollViewer Margin="0,140,0,0">
            <TextBlock x:Name="txbInfo" TextWrapping="Wrap" Text="...." FontSize="20" />
        </ScrollViewer>
        
        
    </Grid>
</Window>
